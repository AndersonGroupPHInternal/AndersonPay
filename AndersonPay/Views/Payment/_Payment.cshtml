<div class="page_Payment">
<div class="form-group">
    <label for="PaymentId"></label>
    <input type="hidden" class="form-control" id="PaymentId" name="PaymentId" value="@Model.PaymentId">
</div>

    <div class="form-group" ng-controller="PaymentController as model" ng-init="model.Initialise(@Model.InvoiceId)">
        <label for="InvoiceId" style="padding-right:270px;">Select Client</label>
        <div class="dropClient">
            <ui-select ng-model="model.Invoice">
                <ui-select-match placeholder="Select Client">
                    <label ng-bind="$select.selected.Name"></label>
                </ui-select-match>
                <ui-select-choices repeat="invoice in (model.Invoices | filter: $select.search) track by $index">
                    <span ng-bind="invoice.Name"></span>
                </ui-select-choices>
            </ui-select>
        </div>
    </div>

        <table class="table table-bordered" style="border-style:solid; font-size: 12px; font-family:Arial, Helvetica, sans-serif;">
            <thead>
                <tr>
                    <th width="20%"><center>SI No.</center></th>
                    <th width="20%"><center>Description</center></th>
                    <th width="20%"><center>Payment</center></th>
                    <th width="20%"><center>Discount</center></th>
                    <th width="20%"><center>Balance</center></th>
                </tr>
            </thead>

            <tbody>
                <tr style="border:none">
                    <td style="border:none"></td>
                    <td style="border:none"></td>
                    <td style="border:none">
                        <input type="number" class="form-control" autocomplete="off" id="payment.Payments" name="payment.Payments" placeholder="0" value="@Model.Payments">
                    </td>
                    <td style="border:none">
                        <input type="number" class="form-control" autocomplete="off" id="payment.Discount" name="payment.Discount" placeholder="0" value="@Model.Discount">
                    </td>
                    <td style="border:none">
                        <input type="number" class="form-control" autocomplete="off" id="payment.Balance" name="payment.Balance" placeholder="0" value="@Model.Balance">
                    </td>
                </tr>
            </tbody>

        </table>

        <div class="form-group">
            <label for="DateOfPayment">Date Of Payment</label>
            <input type="date" class="form-control" autocomplete="off" id="payment.DateOfPayment" name="payment.DateOfPayment" placeholder="Date Of Payment" value="@Model.DateOfPayment">
        </div>

        <div class="form-group">
            <label for="AmountReceived">Amount Received</label>
            <input type="number" class="form-control" autocomplete="off" id="payment.AmountReceived" name="payment.AmountReceived" placeholder="Amount Received" value="@Model.AmountReceived">
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>