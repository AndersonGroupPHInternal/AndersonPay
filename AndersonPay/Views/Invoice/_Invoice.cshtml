                $('body').on('hidden.bs.modal', '.modal', function(){
                    $(this).removeData('bs.modal');
                });
            </script>
            <div class = "modal fade" id="myModal" role="dialog" aria-labled="myModalLabel">
                <div class = "modal-dialog modal-lg" role="document">
