                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" href="@Url.Action("InvoiceSummary", "Invoice")">
                     Proceed
                </button>
            </div>*@
        @* Old Submit *@
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>

    </div>
</div>