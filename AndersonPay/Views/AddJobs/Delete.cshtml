@model AndersonPay.Models.jobs

@{
    ViewBag.Title = "Delete";
}
<div class="form-horizontal" style="padding:20px;">
    <div class="panel panel-heading" id="grad1" style="padding:5px;margin-bottom:10px;padding-left:20px;">

        <h3>Are you sure you want to delete this?</h3>
    </div>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Job Position")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.JobName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Currency)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Currency)
            </dd>
            <dt>
                @Html.DisplayName("Type of Pay")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.RateType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Rate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Rate)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="padding-left:90px">
                <br />
                <input type="submit" value="Delete" class="btn btn-primary" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        }
    </div>
</div>