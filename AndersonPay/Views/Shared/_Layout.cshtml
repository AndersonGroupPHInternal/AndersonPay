<!-- Account Setting Modal -->
<div id="modal_form_vertical" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h5 class="modal-title">Account settings</h5>
            </div>  
            <form action="#">
                <div class="modal-body">

                    <!--Name-->
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>First name</label>
                                <input type="text" placeholder="User" class="form-control">
                            </div>
                            <div class="col-sm-6">
                                <label>Last name</label>
                                <input type="text" placeholder="Admin" class="form-control">
                            </div>
                        </div>
                    </div>

                    <!--city and provice form-->
                    <div class="form-group">
                        <div class="row">

                            <div class="col-sm-4">
                                <label>City</label>
                                <input type="text" placeholder="Anderson Group" class="form-control">
                            </div>
                            <div class="Account-settings-modal">
                                <label>State/Province</label>
                                <input type="text" placeholder="BPO Inc." class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label class="display-block">Picture:</label>
                                    <div class="col-md-12">
                                        <input type="file" class="file-styled">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Close and submit buttons-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>