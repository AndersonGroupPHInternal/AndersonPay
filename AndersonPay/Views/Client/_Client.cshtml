<div class="form-group">
    <label for="Code">Code</label>
    <input type="text" autocomplete="off" class="form-control" id="Code" name="Code" placeholder="Code" value="@Model.Code" />
</div>

<div class="form-group">
    <label for="Name">Name</label>
    <input type="text" autocomplete="off" class="form-control" id="Name" name="Name" placeholder="Name" value="@Model.Name">
</div>
<div class="form-group">
    <label for="Address">Address</label>
    <input type="text" autocomplete="off" class="form-control" id="Address" name="Address" placeholder="Address" value="@Model.Address">
</div>


<div class="form-group">
    <label for="RegistrationNo">Registration No.</label>
    <input type="text" autocomplete="off" class="form-control" id="RegistrationNo" name="RegistrationNo" placeholder="Registration Number" value="@Model.RegistrationNo">
</div>

<div class="form-group">
    <label for="CurrencyCode">CurrencyCode</label>
    <select class="form-control" id="CurrencyCode" name="CurrencyCode">
        <option value="USD" @(Model.CurrencyCode == "USD" ? "Selected" : string.Empty)>USD</option>
        <option value="GBP" @(Model.CurrencyCode == "GBP" ? "Selected" : string.Empty)>GBP</option>
        <option value="PHP" @(Model.CurrencyCode == "PHP" ? "Selected" : string.Empty)>PHP</option>
    </select>
</div>

 <div class="form-group">
     <label for="TaxTypeId"></label>
     <input type="hidden" class="form-control" id="TaxTypeId" name="TaxTypeId" placeholder="TaxType Id" value="1">
</div>

<div class="form-group" ng-controller="InvoiceController as model" ng-init="model.Initialise()">
    <label for="TaxType">Tax Type</label>
    <ui-select ng-model="model.TaxType">
        <ui-select-match placeholder="Select Branch">
            <span ng-bind="$select.selected.Tax"></span>
        </ui-select-match>
        <ui-select-choices repeat="dropDownItem in (model.TaxTypes | filter: $select.search) track by $index">
            <span ng-bind="dropDownItem.Tax"></span>
        </ui-select-choices>
    </ui-select>
</div>

    <div class="form-group">
        <label for="WithHoldingTax">WithHolding Tax</label>
        <input type="number" autocomplete="off" class="form-control" id="WithHoldingTax" name="WithHoldingTax" placeholder="WithHolding Tax" value="@Model.WithHoldingTax">
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>

